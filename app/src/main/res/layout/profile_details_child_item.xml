<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/smiley_icon_padding"
        android:paddingRight="@dimen/smiley_icon_padding"
        android:paddingTop="@dimen/smiley_icon_padding"
        android:weightSum="9.5"
        android:id="@+id/ln">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_weight="4.5"
            android:text=""
            android:textColor="@color/title_textview_item_color"
            android:textSize="@dimen/item_textsize"
            android:textStyle="normal"/>

        <EditText
            android:id="@+id/titleResultEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/negative_large_margin"
            android:layout_weight="4.5"
            android:background="@android:color/transparent"
            android:text="সামান্য শারীরিক প্রতিবন্ধকতা(asdadadad ada dasd adad)"
            android:textColor="#00011F"
            android:textSize="@dimen/item_textsize"
            android:textStyle="normal"
            android:imeOptions="actionDone"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right">
            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top|right"
                android:src="@drawable/accept_icon"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/img_edit_cancel"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="bottom|right"
                android:src="@drawable/remove"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/large_margin"
        android:layout_marginRight="@dimen/large_margin"
        android:background="#eeeeee"
        android:orientation="vertical"
        android:visibility="visible">

    </LinearLayout>
    <!-- </android.support.v7.widget.CardView> E0E0E0-->
</LinearLayout>