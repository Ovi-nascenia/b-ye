<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:descendantFocusability="blocksDescendants"
            android:gravity="center"
            android:text=""
            android:textColor="#626262"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Level"
        android:gravity="center"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/picker"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:descendantFocusability="blocksDescendants" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_disable_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Level"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/disable_desc"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:hint="প্রতিবন্ধকতা সম্পর্কে কিছু বলুন(ঐচ্ছিক)"
            android:textColor="@color/black"
            android:padding="10dp"
            android:textColorHint="@color/lblFromName"
            android:maxLines="5"
            android:gravity="top"
            android:maxLength="300"
            android:visibility="visible"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/limit_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="সর্বনিম্ন: ০, সর্বোচ্চ: ৩০০"
            android:textSize="12sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:visibility="visible"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scroll"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:descendantFocusability="blocksDescendants"
            android:text="@string/registration_cancel_btn_text"
            android:textColor="#626262" />

        <Button
            android:id="@+id/accept"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:descendantFocusability="blocksDescendants"
            android:text="@string/registration_accept_btn_text"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>
