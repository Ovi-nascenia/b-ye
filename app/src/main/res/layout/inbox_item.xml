<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/profile_item_cardview_height"
    android:orientation="vertical"
    android:padding="@dimen/most_small_padding">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_item_cardview_height"
        android:layout_marginBottom="@dimen/small_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_item_cardview_height"
            android:layout_marginBottom="@dimen/most_small_margin"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:padding="@dimen/medium_padding"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:orientation="vertical"
                android:paddingLeft="@dimen/small_padding"
                android:paddingRight="@dimen/most_small_padding">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/medium_padding"
                    android:text="User Name"
                    android:gravity="left"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/medium_textsize" />


                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingTop="@dimen/medium_padding"
                        android:text="27 march'17"
                        android:textColor="#7c7474"
                        android:textSize="10sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>


                <TextView

                    android:id="@+id/message"
                    android:textColor="#8b8181"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:ellipsize="end"
                    android:text="" />

                <TextView
                    android:id="@+id/number_of_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingLeft="170dp"
                    android:layout_marginTop="3dp"
                    android:layout_toEndOf="@+id/message"
                    android:layout_toRightOf="@+id/message"
                    android:text=""
                    android:textColor="#AD0202"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="3dp"></LinearLayout>

</LinearLayout>
