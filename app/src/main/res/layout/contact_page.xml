<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accountrecharge_backGround_color">

    <RelativeLayout
        android:id="@+id/rl_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/ll_contact_container"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/roundshapecontainer"
            android:orientation="vertical">

            <EditText
                android:id="@+id/user_name_contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="13dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_border"
                android:hint="@string/contact_name"
                android:inputType="textPersonName"
                android:padding="15dp" />

            <EditText
                android:id="@+id/phone_number_contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:textSize="13dp"
                android:background="@drawable/edit_text_border"
                android:hint="@string/contact_phone_number"
                android:inputType="phone"
                android:padding="15dp" />

            <EditText
                android:id="@+id/email_address_contact_us"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_border"
                android:hint="@string/contact_email"
                android:inputType="textEmailAddress"
                android:padding="15dp" />

            <EditText
                android:id="@+id/message_contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_border"
                android:fitsSystemWindows="true"
                android:gravity="top"
                android:hint="@string/contact_message"
                android:inputType="textMultiLine"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="35dp"
                android:paddingTop="35dp"/>

            <Button
                android:id="@+id/send_button_contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundshapebuttton"
                android:gravity="center"
                android:text="@string/contact_button"
                android:textColor="@color/contact_buttonText"
                android:textSize="20sp" />

        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_below="@id/ll_contact_container"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/for_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/contact_for_help"
                android:textColor="@color/contact_footer"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/help_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_for_helpNumber"
                android:textColor="@color/contact_footer_text"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/time_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/contact_for_helpTime"
                android:textColor="@color/contact_footer_text" />

        </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</ScrollView>
