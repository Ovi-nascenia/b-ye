<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9ebed">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:clipToPadding="false"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:background="@color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/small_padding">


            <ImageView
                android:id="@+id/backPreviousActivityImage"
                android:layout_width="@dimen/small_image_size"
                android:layout_height="@dimen/small_image_size"
                android:onClick="backBtnAction"
                android:src="@drawable/red_back_arrow"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:lines="2"
                android:text="@string/mobile_verification"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/medium_textsize"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/likeImage"
                android:layout_width="@dimen/small_image_size"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/small_margin"
                android:src="@drawable/grey_fav"
                android:layout_gravity="center"
                android:visibility="invisible"/>


        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/scroll_bar"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/before_sending_varification_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <net.rimoto.intlphoneinput.IntlPhoneInput
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/numbervarifytextView1"
                    android:layout_alignRight="@+id/numbervarifytextView1"
                    android:background="@color/back_verifycode_edittext1"
                    android:layout_marginTop="15dp"
                    app:textSize="14sp"
                    app:textColor="#000000"
                    app:flagPaddingEnd="4dp"
                    app:flagPaddingStart="4dp"
                    app:flagPaddingTop="4dp"
                    app:flagPaddingBottom="4dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/my_phone_input"
                    android:padding="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/numbervarifytextView1"/>

                <Button
                    android:id="@+id/sendVerificationCode"
                    android:layout_below="@id/my_phone_input"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="50dp"
                    android:textSize="18sp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white"
                    android:text="ভেরিফিকেশন কোড পাঠান"
                    android:background="@color/colorPrimary"/>

            </LinearLayout>
            <!---->

            <LinearLayout
                android:id="@+id/after_sending_verification_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/medium_textsize"
                    android:text="@string/verification_message1"
                    android:layout_marginTop="98dp"
                    android:gravity="center"
                    android:layout_below="@+id/toolbar"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/medium_textsize"
                    android:layout_below="@id/text1"
                    android:text="@string/verification_message2"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/verification_code"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="ভেরিফিকেশন কোড"
                    android:background="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_alignLeft="@+id/next"
                    android:layout_alignStart="@+id/next"
                    android:layout_margin="10dp"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:padding="10dp"/>
                <Button
                    android:id="@+id/verify"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/verification_code"
                    android:layout_marginTop="50dp"
                    android:textSize="20sp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white"
                    android:text="পরবর্তী ধাপ"
                    android:background="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/medium_textsize"
                    android:layout_below="@id/next"
                    android:text="@string/verification_message3"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:height="1dp"
                    android:background="#A9A9A9"/>
                <TextView
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:text="পুরাতন ব্যবহারকারী লগইন করুন"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"/>


            </LinearLayout>


        </LinearLayout>



    </ScrollView>

</RelativeLayout>
