<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9ebed"
    android:orientation="vertical">

    <TextView
        android:id="@+id/disable_status_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="প্রতিবন্ধকতা সম্পর্কে কিছু বলুন"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/disable_desc"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:hint="প্রতিবন্ধকতা সম্পর্কে কিছু বলুন(ঐচ্ছিক)"
        android:background="@color/white"
        android:textColor="@color/black"
        android:padding="10dp"
        android:textColorHint="@color/lblFromName"
        android:maxLines="5"
        android:gravity="top"
        android:maxLength="300"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/limit_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="সর্বনিম্ন: ০, সর্বোচ্চ: ৩০০"
        android:textSize="12sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:visibility="visible"/>

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/ok"
        android:textSize="24sp"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_margin="10dp" />
</LinearLayout>