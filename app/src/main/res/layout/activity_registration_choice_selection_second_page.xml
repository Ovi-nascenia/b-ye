<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/without_expand_color">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:clipToPadding="false"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:background="@color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/small_padding">


            <ImageView
                android:id="@+id/backPreviousActivityImage"
                android:layout_width="@dimen/small_image_size"
                android:layout_height="@dimen/small_image_size"
                android:onClick="backBtnAction"
                android:src="@drawable/red_back_arrow"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/own_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:lines="2"
                android:text="আপনার পছন্দ নির্বাচন করুন"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/medium_textsize"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/likeImage"
                android:layout_width="@dimen/small_image_size"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/small_margin"
                android:src="@drawable/grey_fav"
                android:layout_gravity="center"
                android:visibility="invisible"/>


        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/occupation_Text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="পেশা"
                android:layout_marginLeft="@dimen/medium_margin"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp" />
            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/professional_group_Text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="প্রফেশনাল গ্রুপ"
                android:layout_marginLeft="@dimen/medium_margin"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp" />

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/home_town_Text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="বাড়ি কোথায় হবে?"
                android:layout_marginLeft="@dimen/medium_margin"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp" />
            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_margin="10dp">

                <CheckBox
                    android:id="@+id/dhaka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ঢাকা বিভাগ"
                    android:textColor="@color/colorPrimary"/>

                <LinearLayout
                    android:id="@+id/dhaka_districts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_margin="10dp"
                    android:visibility="gone"/>

                <CheckBox
                    android:id="@+id/rajshahi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="রাজশাহী বিভাগ"
                    android:textColor="@color/colorPrimary"/>

                <LinearLayout
                    android:id="@+id/rajshahi_districts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:layout_margin="10dp"/>

                <CheckBox
                    android:id="@+id/mymensing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ময়মনসিংহ বিভাগ"
                    android:textColor="@color/colorPrimary"/>
                <LinearLayout
                    android:id="@+id/mymensing_districts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:layout_margin="10dp"/>

                <CheckBox
                    android:id="@+id/barisal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="বরিশাল বিভাগ"
                    android:textColor="@color/colorPrimary"/>
                <LinearLayout
                    android:id="@+id/barisal_districts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:layout_margin="10dp"/>

                <CheckBox
                    android:id="@+id/chittagong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="চট্টগ্রাম বিভাগ"
                    android:textColor="@color/colorPrimary"/>

                <LinearLayout
                    android:id="@+id/chittagong_districts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:layout_margin="10dp"/>

                <CheckBox
                    android:id="@+id/khulna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="খুলনা বিভাগ"
                    android:textColor="@color/colorPrimary"/>
                <LinearLayout
                    android:id="@+id/khulna_districts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:layout_margin="10dp"/>

                <CheckBox
                    android:id="@+id/sylhet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="সিলেট বিভাগ"
                    android:textColor="@color/colorPrimary"/>

                <LinearLayout
                    android:id="@+id/sylhet_districts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:layout_margin="10dp"/>

                <CheckBox
                    android:id="@+id/rangpur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="রংপুর বিভাগ"
                    android:textColor="@color/colorPrimary"/>
                <LinearLayout
                    android:id="@+id/rangpur_districts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:layout_margin="10dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="পরবর্তী ধাপ"
                android:textSize="24sp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                />
        </LinearLayout>

    </ScrollView>
</LinearLayout>



